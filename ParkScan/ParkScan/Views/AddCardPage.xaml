<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Add Card"
             BackgroundColor="#eeeeee"
             x:Class="ParkScan.AddCardPage">
    <ContentPage.Content>
        <StackLayout Margin="10,20,10,0">
            <Entry 
                x:Name="entryCardName" 
                Placeholder="Card Name"/>
            <Entry 
                x:Name="entryCardNumber" 
                Placeholder="Card Number"/>
            <StackLayout Orientation="Horizontal" Margin="0,0,0,15">
                <Entry 
                x:Name="entryExpiryDate"
                HorizontalOptions="FillAndExpand"
                Placeholder="Expiry Date"/>
                <Entry 
                x:Name="entryCvv"
                HorizontalOptions="FillAndExpand"
                Placeholder="CVV"/>
            </StackLayout>
            <Button x:Name="btn_AddCard" 
                    Text="Save"
                    FontSize="Medium"                   
                    TextColor="White"
                    BackgroundColor="#C2185B"
                    Margin="15,0,15,0"
                    Clicked="Btn_AddCard_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>