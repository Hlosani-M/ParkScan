                   VerticalOptions="Center" 
                   HorizontalOptions="Center" />
            <Label Text="Happy Parking :)" Margin="10,0,10,0" TextColor="#C2185B"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>