             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             Title="Rewards"
             x:Class="ParkScan.Views.RewardsPage">
    <ContentPage.Content>
        <StackLayout Margin="0,150,0,0">
            <Label Text="Reach your first milestone of 10 parkings and earn 10 parkscan points!!!"
